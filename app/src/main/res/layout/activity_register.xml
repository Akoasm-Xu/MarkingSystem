<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.RegisterActivity">

    <include layout="@layout/pub_title" />
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_20"
        android:orientation="vertical">

        <EditText
            android:id="@+id/register_user_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/login_edit"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
            android:hint="账号（登录账号）"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/register_name_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/login_edit"
            android:hint="用户名(建议为使用者姓名)"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/register_department_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/login_edit"
                android:clickable="true"
                android:focusable="false"
                android:gravity="center|left"
                android:hint="部门"
                android:tag="0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/register_post_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/login_edit"
                android:clickable="true"
                android:gravity="center|left"
                android:hint="岗位"
                android:tag="0"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/register_group_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/login_edit"
                android:clickable="true"
                android:focusable="false"
                android:gravity="center|left"
                android:hint="组别"
                android:tag="1"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/register_level_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/login_edit"
                android:clickable="true"
                android:focusable="false"
                android:gravity="center|left"
                android:hint="等级"
                android:tag="0"

                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/register_pwd_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/login_edit"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
            android:hint="密码"
            android:inputType="textPassword"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/register_again_pwd_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/login_edit"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>