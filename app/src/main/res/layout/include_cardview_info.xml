<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="@dimen/dp_10"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_20"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="@dimen/dp_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cardview_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="李萌萌"
                android:textColor="@color/colorBlue2"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/cardview_sex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="女"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/cardview_age"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="23"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/cardview_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="3"
                android:gravity="center|left"
                android:text="13565587545"
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>


        <TextView
            android:id="@+id/cardview_post"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp_20"
            android:text="面试岗位：UI设计师"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/cardview_department"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp_20"
            android:text="面试部门：产品部"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cardview_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:paddingRight="@dimen/dp_20"
                android:text="2019-03-08"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
